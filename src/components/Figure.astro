---
export interface Props {
    src: string;
    alt?: string;
    classList?: Array<string>;
    mode?: 'float-right' | 'float-left' | 'center' | 'in:row';
}
const { src, alt, classList, mode } = Astro.props;

let modeList = 'lg:m-4 mx-auto mb-4 ';
if (mode == 'float-right') {
    modeList += 'lg:float-right lg:w-1/4 w-4/5';
} else if (mode == 'float-left') {
    modeList += 'lg:float-left lg:w-1/4 w-4/5';
} else if (mode == 'center') {
    modeList += 'lg:mx-auto lg:w-1/2 w-4/5';
} else if (mode == 'in:row') {
    modeList = 'mb-4 w-4/5 mx-auto';
}
---

<div class:list={[modeList, classList]}>
    <img class="rounded w-full mb-1" src={src} alt={alt} />
    <figcaption class="text-sm text-gray-600 text-center"><slot /></figcaption>
</div>

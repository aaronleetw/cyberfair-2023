---
import { Image } from '@astrojs/image/components';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />		<meta name="generator" content={Astro.generator} />
		<script src="https://unpkg.com/@popperjs/core@2" is:inline></script>
		<title>{title}</title>
	</head>
	<body class="bg-bg">
		<slot />
	</body>
	<footer class="bg-gradient-to-r from-[rgba(4,27,21,0.4)] to-[rgba(5,51,45,0.4)] border-t-black border-t">
		<div class="md:flex block container mx-auto p-5 items-center justify-between">
			<a href="https://www.fhjh.tp.edu.tw/" target="_blank">
				<Image src={import('../assets/img/fhjh.png')} class="md:h-20 h-16 md:mb-0 mb-3 md:mx-0 mx-auto w-auto" format="webp" width="368" height="104" fit="contain" alt=""></Image>
			</a>
			<div class="block">
				<a href="http://www.globalschoolnet.org/gsncf/" target="_blank">
					<Image src={"https://pottery.pages.dev/static/img/cyberfairbanner.jpg"} format="webp" width="468" height="65" class="md:mx-0 mx-auto" alt=""></Image>
				</a>
				<p class="text-black text-sm text-center mt-2 mb-0">This site is optimized for 1920x1080 screens <br>
					© 2022-2023 Saving Coral Reefs (一個中文名稱)</p>
			</div>
		</div>
	</footer>
</html>


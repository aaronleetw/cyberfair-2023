<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Righteous&family=Patua+One&family=Merriweather&display=swap');

	:root {
		/* --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.3rem, 0.7vw + 1.3rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem); */

		--color-text: hsl(12, 5%, 4%);
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: 1.19rem;
		color: var(--color-text);
		background-color: var(--color-bg);
	}

	body {
		margin: 0;
	}

	* {
		font-family: 'Merriweather', sans-serif;
		-moz-font-smoothing: none;
		font-smoothing: antialiased;
		-webkit-font-smoothing: antialiased;
	}

	h1 {
		font-family: 'Merriweather', display;
	}

	nav h2 {
		font-size: 1.5rem;
		font-family: 'Righteous', display;
		text-align: left;
	}

	h2 {
		font-size: 1.5rem;
		font-family: 'Merriweather', display;
		font-weight: bold;
		margin-bottom: 0.5rem;
	}

	h3 {
		font-size: 1.1rem;
		font-family: 'Merriweather', display;
		font-weight: bold;
		margin-bottom: 0.4rem;
	}

	h4 {
		font-weight: bold;
		margin-bottom: 0.3rem;
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	p {
		font-size: 0.8rem;
		margin-bottom: 1.5rem;
		line-height: 1.75rem;
		text-align: justify;
	}

	a {
		font-size: 0.8rem;
	}

	.material-symbols-outlined {
		font-variation-settings:
			'FILL' 0,
			'wght' 500,
			'GRAD' 0,
			'opsz' 48
	}

	ol {
		list-style-type: decimal;
		padding-left: 2rem;
		font-size: 0.8rem;
		margin-bottom: 1.5rem;
	}

	ul {
		list-style-type: disc;
		padding-left: 2rem;
		font-size: 0.8rem;
		margin-bottom: 1.5rem;
	}

	a {
		color: #005fef;
		text-decoration: underline;
	}

	nav a {
		color: inherit;
		text-decoration: inherit;
	}

	*::selection {
		background-color: rgba(197, 245, 95, 0.8);
	}
</style>

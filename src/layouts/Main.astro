---
import { Image } from '@astrojs/image/components';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />		<meta name="generator" content={Astro.generator} />
		<script src="https://unpkg.com/@popperjs/core@2" is:inline></script>
		<title>{title}</title>
	</head>
	<body class="bg-bg">
		<div class="content" style="flex: 1 0 auto;">
			<slot />
		</div>
		<footer class="bg-gradient-to-r from-[rgba(4,27,21,0.4)] to-[rgba(5,51,45,0.4)] border-t-black border-t flex-shrink-0">
			<div class="md:flex block container mx-auto p-5 items-center justify-between">
				<a href="https://www.fhjh.tp.edu.tw/" target="_blank">
					<Image src={import('../assets/img/fhjh.png')} class="md:h-20 h-16 md:mb-0 mb-3 md:mx-0 mx-auto w-auto" format="png" width="368" height="104" fit="contain" alt=""></Image>
				</a>
				<div class="block">
					<a href="http://www.globalschoolnet.org/gsncf/" target="_blank">
						<Image src={import('../assets/img/cfbanner.jpeg')} format="jpg" width="468" height="65" class="md:mx-0 mx-auto" alt=""></Image>
					</a>
					<p class="text-black text-sm text-center mt-2 mb-0">This site is optimized for 1920x1080 screens <br>
						© 2022-2023 Coral Reefs: The Endangered Beauty (珊瑚礁之淚)</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Righteous&family=Patua+One&family=Merriweather&display=swap');

	:root {
		--color-text: hsl(12, 5%, 4%);
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: 1.19rem;
		color: var(--color-text);
		background-color: var(--color-bg);
  		height: 100%;
	}

	body {
		margin: 0;
		min-height: 100%;
		display: flex;
  		flex-direction: column;
	}

	* {
		font-family: 'Merriweather', sans-serif;
		-moz-font-smoothing: none;
		font-smoothing: antialiased;
		-webkit-font-smoothing: antialiased;
	}

	h1 {
		font-family: 'Merriweather', display;
	}

	nav h2 {
		font-size: 1.5rem;
		font-family: 'Righteous', display;
		text-align: left;
	}

	h2 {
		font-size: 1.5rem;
		font-family: 'Merriweather', display;
		font-weight: bold;
		margin-bottom: 0.5rem;
	}

	h3 {
		font-size: 1.1rem;
		font-family: 'Merriweather', display;
		font-weight: bold;
		margin-bottom: 0.4rem;
	}

	h4 {
		font-weight: bold;
		margin-bottom: 0.3rem;
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	p {
		font-size: 0.8rem;
		margin-bottom: 1.5rem;
		line-height: 1.75rem;
		text-align: justify;
	}

	a {
		font-size: 0.8rem;
	}

	.material-symbols-outlined {
		font-variation-settings:
			'FILL' 0,
			'wght' 500,
			'GRAD' 0,
			'opsz' 48
	}

	ol {
		list-style-type: decimal;
		padding-left: 2rem;
		font-size: 0.8rem;
		margin-bottom: 1.5rem;
	}

	ul {
		list-style-type: disc;
		padding-left: 2rem;
		font-size: 0.8rem;
		margin-bottom: 1.5rem;
	}

	a {
		color: #005fef;
		text-decoration: underline;
	}

	nav a {
		color: inherit;
		text-decoration: inherit;
	}

	*::selection {
		background-color: rgba(197, 245, 95, 0.8);
	}
</style>
